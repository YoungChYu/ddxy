<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ddxy.system.dao.SystemUserDao">
    <select id="verifyByUser" resultType="com.ddxy.system.pojo.SystemUser" parameterType="string">
        select * from dapl_user where name=#{name} and pwd=#{pwd}
    </select>
</mapper>